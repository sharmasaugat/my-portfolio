{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "outputCapture": "std",
            "protocol": "inspector",
            "internalConsoleOptions": "neverOpen",
            "stopOnEntry": false,
            "smartStep": true
        }
    ]
}