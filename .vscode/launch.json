{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
            "program": "${workspaceFolder}/backend/src/server.ts",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/backend/dist/**/*.js"],
            "cwd": "${workspaceFolder}/backend",  // This matches your backend folder
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "TS_NODE_PROJECT": "${workspaceFolder}/backend/tsconfig.json"  // Full path to tsconfig
            },
            "protocol": "inspector",
            "restart": true
        }
    ]
}